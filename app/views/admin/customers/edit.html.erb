<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light"><%= "#{@customer.last_name + @customer.first_name}さん" %>の会員編集</h1>
  </div>
    <%= form_with model: @customer,url: admin_customer_path,local:true do |f| %>
      
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">会員ID</h6>
        <div class="col-3">
          <%= @customer.id %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">名前</h6>
        <div class="col-3">
          <%= f.text_field :last_name,autofocus: true ,class:"form-control"%>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name,autofocus: true,class:"form-control" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">フリガナ</h6>
        <div class="col-3">
          <%= f.text_field :last_name_kana,autofocus: true ,class:"form-control"%>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name_kana,autofocus: true,class:"form-control" %>
        </div>
      </div>
      
    
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">メールアドレス</h6>
        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"sample@example.com" %>
        </div>
      </div>
    
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">郵便番号（ハイフンなし）</h6>
        <div class="col-3">
          <%= f.text_field :postal_code, autofocus: true,class:"form-control",placeholder:"0000000" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">住所</h6>
        <div class="col-7">
          <%= f.text_field :address, autofocus: true,class:"form-control",placeholder:"東京都渋谷区" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">電話番号（ハイフンなし）</h6>
        <div class="col-3">
          <%= f.text_field :telephone_number, autofocus: true,class:"form-control",placeholder:"00000000000" %>
        </div>
      </div>
      
      <div class="row mb-3 align-items-center mb-3">
        <label class="col-3">会員ステータス</label>
        <div class="col-3">
          <div class="form-check-inline">
            <div class="form-check pl-0">
              <label class="form-check-label"><%= f.radio_button :is_delete,true %>販売中</label>
            </div>
            <div class="form-check">
               <label class="form-check-label"><%= f.radio_button :is_delete,false %>販売停止中</label>
            </div>
          </div>
        </div>
      </div>
      
    
      <div class="row g-3 align-items-center mb-3">
        <%= f.submit "変更を保存",class:"btn btn-success offset-3 col-2"%>
      </div>
<% end %>
  

</div>




