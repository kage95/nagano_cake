<div class="container">
  <div class="row mb-2">
    <h4 class="offset-1 bg-light"><%= "#{@customer.last_name + @customer.first_name}さん" %>の会員詳細</h1>
  </div>
  
  <div class="row">
    <table class="table table-borderless">
      <tbody>
          <tr>
            <td style="width:15%;">会員ID</td>
            <td ><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%=  @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_delete ?  "有効" : "退会" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する",edit_admin_customer_path(@customer.id),class:"btn btn-success mr-5" %>
              <%= link_to "注文履歴一覧を見る",admin_orders_path(@customer.id),class:"btn btn-primary" %>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>