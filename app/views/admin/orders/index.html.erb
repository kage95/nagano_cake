<div class="container w-75">
  <div class="row mb-2 justify-content-between">
    <h4 class="bg-light">注文履歴一覧</h1>
  </div>
  <div class="row justify-content-center">
    <table class="table table-bordered w-75">
      <thead>
        <tr>
          <th class="table-active">購入日時</th>
          <th class="table-active">購入者</th>
          <th class="table-active">注文個数</th>
          <th class="table-active">支払いステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%=  link_to (l order.created_at, format: :short),admin_order_path(order.id) %></td>
            <td class="align-middle"><%= order.customer.last_name + '' + order.customer.first_name %></td>
            <td class="align-middle"><%= order.order_details.inject(0){ | amount,detail | amount + detail.count} %></td>
            <td class="align-middle"><%= order.order_status_i18n %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  
  <div class="d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
  
</div>