<div class="container">
  
  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">商品登録</h1>
  </div>
  
  <div class="container w-50">
    <%=form_with model: @item,url:admin_items_path,local:true do |f| %>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-4 col-form-label">商品画像</label>
        <div class="col-8">
          <%= f.attachment_field :image %>
          <p></p>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputPassword3" class="col-4 col-form-label">商品名</label>
        <div class="col-8">
          <%= f.text_field :name,autofocus:true,class:"form-control"%>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputPassword3" class="col-4 col-form-label">商品説明</label>
        <div class="col-8">
          <%= f.text_area :introduction,autofocus:true,class:"form-control"%>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputPassword3" class="col-4 col-form-label">ジャンル</label>
        <div class="col-8">
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name,genre.id] },{include_blank: "選択して下さい"},{class:"form-control"}%>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputPassword3" class="col-4 col-form-label">税抜価格</label>
        <div class="col-8">
          <%= f.text_field :price,autofocus:true,class:"form-control",placeholder:1000 %>
        </div>
      </div>
       
      <div class="row mb-3 align-items-center">
        <label class="col-form-label col-4">販売ステータス</label>
        <div class="col-8">
          <div class="form-check-inline">
            <div class="form-check">
              <label class="form-check-label"><%= f.radio_button :is_active,true %>販売中</label>
            </div>
            <div class="form-check">
               <label class="form-check-label"><%= f.radio_button :is_active,false %>販売停止中</label>
            </div>
          </div>
        </div>
      </div>
      
      <div class="action d-flex justify-content-center">
        <%= f.submit "新規登録",class:"btn btn-success"%>
      </div>
    <%end%>
  </div>
</div>