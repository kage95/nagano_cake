<div class="container">
  <h3 class="row justify-content-end">
    <%= link_to "+",new_admin_item_path ,class:"bg-info text-light rounded-circle px-2 text-decoration-none"%>
  </h3>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜き価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td>
              <%= link_to(admin_item_path(item.id)) do%>
                <%= item.name %>
              <% end%>
              </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active ? "販売中" : "停止中"%></td>
          </tr>
        <% end %>  
      </tbody>
    </table>
    </div>
  </div>  