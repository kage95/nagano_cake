<div class="container mt-3">
  <div class="row">
    <div class="col-8 offset-2">
      <h1 class="h3 mt-2 mb-3 font-weight-normal"><span class="bg-light">管理者ログイン</span></h1>
      
      <%= form_with model:@admin,url:admin_session_path,class:"mx-auto",local:true do |f|%>
        <div class="d-flex align-items-center justify-content-center mb-3">
          <div class="col-3">
            <label for="email" class="col-form-label">メールアドレス</label>
          </div>
          <div class="col-6">
           <%= f.label :email,class:"sr-only"%>
           <%= f.email_field :email,autofocus: true,autocomplete:"email",placeholder:"email",class:"form-control"%>
          </div>  
        </div>
        
        <div class="d-flex align-items-center justify-content-center mb-3">
          <div class="col-3">
            <label for="password" class="col-form-label">パスワード</label>
          </div>
         
          <div class="col-6"> 
           <%= f.label :password,class:"sr-only"%>
           <%= f.password_field :password,autocomplete:"current-password",class:"form-control"%>
          </div>
        </div>
        
        <div class="actions d-flex justify-content-center">
          <%= f.submit "ログイン",class:"btn btn-primary my-1"%>
        </div>
      <%end%>
      
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
