<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">ジャンル編集</h1>
  </div>
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <!--ジャンル追加-->
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <div class="row g-3 align-items-center mb-5">
    <div class="col-auto">
      <label for="inputPassword6" class="col-form-label">ジャンル名</label>
    </div>
    <div class="col-auto">
        <%= form_with model:@genre,url:admin_genre_path,local:true do |f|%>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <%= f.text_field :name,autofocus:true,class:"form-control"%>
            </div>
            <div class="action col-auto">
              <%= f.submit "変更を保存",class:"btn btn-success"%>
            </div>
          </div>
        <%end%>
    </div>
  </div>
</div>