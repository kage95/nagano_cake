<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">ジャンル一覧・追加</h1>
  </div>
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <!--ジャンル追加-->
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <div class="row g-3 align-items-center mb-5">
    <div class="col-auto">
      <label for="inputPassword6" class="col-form-label">ジャンル名</label>
    </div>
    <div class="col-auto">
        <%= form_with model:@genre,url:admin_genres_path,local:true do |f|%>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <%= f.text_field :name,autofocus:true,class:"form-control"%>
            </div>
            <div class="action col-auto">
              <%= f.submit "新規登録",class:"btn btn-success"%>
            </div>
          </div>
        <%end%>
    </div>
  </div>
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <!--ジャンル追加-->
  <!--/////////////////////////////////////////////////////////////////////////////-->
  
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <!--ジャンル一覧-->
  <!--/////////////////////////////////////////////////////////////////////////////-->
    <table class="table w-25">
      <thead class="bg-light">
        <tr>
          <th scope="col" colspan="2">ジャンル</th>
        </tr>
      </thead>

      <tbody>
          <%@genres.each do |genre| %>
            <tr class="">
              <th scope="row"><%= genre.name%></th>
              <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-success"%></td>
            </tr>
          <%end%>
      </tbody>   
    </table>
  <!--/////////////////////////////////////////////////////////////////////////////-->
  <!--ジャンル一覧-->
  <!--/////////////////////////////////////////////////////////////////////////////-->
</div>


