<div class="container">
  <div class="row">
    
    <div class="col-3">
      <%= render "genre_search",genres:@genres %>
    </div>
    
    <div class="col-9">
      <h4>ジャンル検索結果</h4>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="item pr-1 mb-3">
            <div>
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, format: 'jpeg', size: '200x200' ,class:"mb-2" %>
              <% end %>
            </div>
            <p class="font-weight-bold">
              <%= item.name %></br>
              <%= number_to_currency(item.price,unit: "¥",strip_insignificant_zeros: true) %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
    
    
  </div>
</div>