<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">注文情報入力</h1>
  </div>
  <%= form_with model:@order,url:confirm_path,method: :post,local:true do |f| %> 
    <div class="row">
      <h5 class="col-12 font-weight-bold">支払い方法</h5>
      <div class="ml-5">
          <%= f.radio_button :payment_method,Order.payment_methods.key(0) %>
          <%= f.label :payment_method,Order.payment_methods_i18n[:credit_card] %></br>
          <%= f.radio_button :payment_method,Order.payment_methods.key(1) %>
          <%= f.label :payment_method,Order.payment_methods_i18n[:transfer] %>
      </div>
    </div>
    
    <div class="row">
      <h5 class="col-12 font-weight-bold">お届け先</h5>
      <div class="ml-5">
        
        <div>
          <%= f.radio_button :select_address ,"0" %>
          <%= f.label :select_address,"ご自身の住所"%>
          <p class="ml-5"><%= current_customer.address %></p>
        </div>
        
        <div>
          <%= f.radio_button :select_address,"1" %>
          <%= f.label :select_address,"登録済住所から選択" %>
          <%= f.select :address_id,options_from_collection_for_select(current_customer.addresses.all, :id, :address_display) %>
        </div>
        
        <div>
          <%= f.radio_button :select_address ,"2" %>
          <%= f.label :select_address,"新しいお届け先"%></br>
          <div class="row flex-column mb-2">
            <div class="col-6"><%= f.label :shipping_postal,"郵便番号（ハイフンなし）"%></div>
            <div class="col-6"><%= f.text_field :shipping_postal, autofocus: true,class:"form-control",placeholder:"0000000" %></div>
          </div>
          <div class="row flex-column mb-2">
            <div class="col-3"><%= f.label :shipping_address,"住所"%></div>
            <div class="col-9"><%= f.text_field :shipping_address, autofocus: true,class:"form-control",placeholder:"東京都渋谷区" %></div>
          </div>
          <div class="row flex-column">
            <div class="col-3"><%= f.label :shipping_name,"名前" %></div>
            <div class="col-9"><%= f.text_field :shipping_name, autofocus: true,class:"form-control",placeholder:"名前" %></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row justify-content-center mb-3">
      <%= f.submit "確認画面に進む",class:"btn btn-primary" %>
    </div>
  <%end%>
</div>