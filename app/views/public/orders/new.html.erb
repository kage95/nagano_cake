<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">注文情報入力</h1>
  </div>
  <%= form_with model:@order,url:confirm_path,local:true do |f| %> 
    <div class="row">
      <h5 class="col-12 font-weight-bold">支払い方法</h5>
      <div class="ml-5">
  
          <%= f.radio_button :payment_method,Order.payment_methods.key(0) %>
          <%= f.label :payment_method,Order.payment_methods_i18n[:credit_card] %></br>
          <%= f.radio_button :payment_method,Order.payment_methods.key(1) %>
          <%= f.label :payment_method,Order.payment_methods_i18n[:transfer] %>
  
      </div>
    </div>
    
    <div class="row">
      <h5 class="col-12 font-weight-bold">お届け先</h5>
      <div class="ml-5">
        
        <div>
          <%= f.radio_button :shipping_address ,current_customer.address%>
          <%= f.label :shipping_address,"ご自身の住所"%>
          <p class="ml-5"><%= current_customer.address%></p>
        </div>
        
        <div>
          <%= f.radio_button :shipping_address,current_customer.address %>
          <%= f.label :shipping_address,"登録済住所から選択" %>
          <%= f.select :address,options_from_collection_for_select(current_customer.addresses.all, :id, :address) %>
        </div>
        
        <div class="col-12">
          <%= f.radio_button :shipping_address ,current_customer.address%>
          <%= f.label :shipping_address,"新しいお届け先"%></br>
          <div class="row">
            <%= f.label :postal_code,"郵便番号（ハイフンなし）"%>
            <%= f.text_field :postal_code, autofocus: true,class:"form-control",placeholder:"0000000" %>
          </div>
          <div class="row">
            <div class="col-3"><%= f.label :address,"住所"%></div>
            <div class="col-9"><%= f.text_field :address, autofocus: true,class:"form-control",placeholder:"東京都渋谷区" %></div>
          </div>
        </div>
       
       
      </div>
    </div>
  <%end%>
</div>