<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">配送先登録/一覧</h1>
  </div>
    <%= form_with model: @address,url: addresses_path,local:true do |f| %>
    
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">郵便番号（ハイフンなし）</h6>
        <div class="col-3">
          <%= f.text_field :postal_code, autofocus: true,class:"form-control",placeholder:"0000000" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">住所</h6>
        <div class="col-6">
          <%= f.text_field :address, autofocus: true,class:"form-control",placeholder:"東京都渋谷区" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">宛名</h6>
        <div class="col-3">
          <%= f.text_field :name, autofocus: true,class:"form-control",placeholder:"令和道子" %>
        </div>
        <div class="col-3 offset-3">
          <%= f.submit "新規登録",class:"btn btn-success"%>
        </div>
      </div>
      
    <% end %>

  <div class="row">
    <table class="table w-75 table-bordered">
      <thead>
        <tr>
          <th class="table-active" width="100">郵便番号</th>
          <th class="table-active" width="250">住所</th>
          <th class="table-active" width="100">宛名</th>
          <th class="table-active" width="150"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する",edit_address_path(address.id),class:"btn btn-success" %>
              <%= link_to "削除する",address_path(address.id),method: :delete,class:"btn btn-danger",data: {confirm: "削除しますか？"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>