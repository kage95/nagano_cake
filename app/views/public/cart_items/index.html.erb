<div class="container">
  <div class="row mb-2">
    <h4 class="bg-light">ショッピングカート</h1>
    <%= link_to "カートを空にする",destroy_all_path ,method: :delete %>
  </div>
  
   <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th class="table-active" width="500">商品名</th>
          <th class="table-active" width="175">単価（税込）</th>
          <th class="table-active" width="175">数量</th>
          <th class="table-active" width="175">小計</th>
          <th class="table-active" width="175"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model:cart_item,url:cart_item_path(cart_item.id),local:true do |f| %>
                <%= f.select :amount,*[1..3]%>
                <%= f.submit "変更" %>
              <% end%>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除する",cart_item_path(cart_item.id),method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="row">
    <%= link_to "買い物を続ける",root_path %>
    <table>
      <tbody>
        <tr>
          <th>合計金額</th>
          <td>
            <% @cart_items.each do |cart_item| %>
              <% @total_price = 0 %>
              <%= (@total_price += cart_item.subtotal).to_s(:delimited) %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>