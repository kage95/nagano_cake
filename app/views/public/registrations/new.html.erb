<div class="container">
  
  <div class="row mb-2">
    <h4 class="offset-1 bg-light">新規会員登録</h1>
  </div>
    <%= form_with model: @customer,url: customer_registration_path,local:true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">名前</h6>
        <div class="col-1">
         <%= f.label :last_name%>
        </div>
        <div class="col-3">
          <%= f.text_field :last_name,autofocus: true ,class:"form-control"%>
        </div>
        <div class="col-1">
         <%= f.label :first_name%>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name,autofocus: true,class:"form-control" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">フリガナ</h6>
        <div class="col-1">
         <%= f.label :last_name_kana %>
        </div>
        <div class="col-3">
          <%= f.text_field :last_name_kana,autofocus: true ,class:"form-control"%>
        </div>
        <div class="col-1">
         <%= f.label :first_name_kana %>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name_kana,autofocus: true,class:"form-control" %>
        </div>
      </div>
      
    
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">メールアドレス</h6>
        <div class="col-3 offset-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"sample@example.com" %>
        </div>
      </div>
    
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">郵便番号（ハイフンなし）</h6>
        <div class="col-3 offset-1">
          <%= f.text_field :postal_code, autofocus: true,class:"form-control",placeholder:"0000000" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">住所</h6>
        <div class="col-7 offset-1">
          <%= f.text_field :address, autofocus: true,class:"form-control",placeholder:"東京都渋谷区" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">電話番号（ハイフンなし）</h6>
        <div class="col-3 offset-1">
          <%= f.text_field :telephone_number, autofocus: true,class:"form-control",placeholder:"00000000000" %>
        </div>
      </div>
      
      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">パスワード（6文字以上)</h6>
        <div class="col-3 offset-1">
        <% if @minimum_password_length %>
        
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>

      <div class="row g-3 align-items-center mb-3">
        <h6 class="col-3">パスワード（確認用）</h6>
        <div class="col-3 offset-1">
         <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>
    
    
      <div class="row g-3 align-items-center mb-3">
        <%= f.submit "Sign up",class:"btn btn-success offset-4 col-2"%>
      </div>
<% end %>


  <div class="row mb-2">
    <h4 class="offset-1 bg-light">すでに登録済みの方</h1>
  </div>
  
  <div class="row">
    <div class="offset-2 d-flex">
      <%= render "public/shared/links" %><span>からログインしてください。</span>
    </div>
  </div>
  

</div>




